---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Locations">
  <main class="container mx-auto px-4 py-12">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold mb-8">Our Locations</h1>

      <div class="bg-white rounded-lg shadow-md overflow-hidden mb-12">
        <div class="aspect-w-16 aspect-h-9">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2970.3231849205385!2d-87.6397!3d41.8781!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x880e2cbcb88d3b45%3A0x37ef3551862c07a5!2sChicago%2C%20IL!5e0!3m2!1sen!2sus!4v1625761234567!5m2!1sen!2sus"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
        </div>
        
        <div class="p-8">
          <h2 class="text-2xl font-bold mb-4">Chicago</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="font-semibold mb-2">Address</h3>
              <p class="text-gray-600 mb-4">
                <br>
                Chicago, IL<br>
                United States
              </p>
              <h3 class="font-semibold mb-2">Contact</h3>
              <p class="text-gray-600">
                <br>
                Email: sales@pivotport.com
              </p>
            </div>
            <div>
              <h3 class="font-semibold mb-2">Office Hours</h3>
              <p class="text-gray-600 mb-4">
                Monday - Friday: 9:00 AM - 5:00 PM CST<br>
                Saturday - Sunday: Closed
              </p>
              <h3 class="font-semibold mb-2">Parking</h3>
              <p class="text-gray-600">
                 <br>
                 
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-purple-50 p-8 rounded-lg">
        <h2 class="text-2xl font-bold mb-6">Visit Us</h2>
        <p class="mb-6">
          We work remotely. We welcome visitors and potential partners to schedule a virtual meeting with our team.
        </p>
        <div class="flex gap-4">
          <a
            href="/contact"
            class="inline-block bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition-colors"
          >
            Schedule a Visit
          </a>
          <a
            href="/contact"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block bg-white text-purple-600 px-6 py-3 rounded-lg hover:bg-purple-50 transition-colors"
          >
             
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>
